---
import ErrorLayout from "@/layouts/ErrorLayout.astro";
import SiteFixIcon from "@/icons/error/SiteFix.astro";
import LinkedInIcon from "@/icons/Social/LinkedIn.astro";
import MailIcon from "@/icons/common/Mail.astro";

const title = "Website Under Maintenance";
const description = "The website is temporarily unavailable due to ongoing maintenance.";
---

<ErrorLayout title={title} description={description}>
  <div class="flex flex-col items-center justify-center min-h-screen px-4 bg-background text-foreground">
    <!-- SVG illustration with adjusted size and alignment -->
    <SiteFixIcon class="w-full lg:w-1/2 h-auto mb-8" />

    <!-- Main message -->
    <h1 class="text-5xl lg:text-6xl font-bold mb-8 text-foreground text-center">
      Website Under Maintenance.
    </h1>
    <p class="text-2xl lg:text-3xl mb-8 text-foreground text-center">
      I'll be back soon!
    </p>

    <!-- Contact information with icons -->
    <div class="w-full py-4 mt-8 border-t border-gray-300 dark:border-gray-700">
      <div class="container mx-auto flex flex-col md:flex-row items-center justify-center text-foreground text-sm md:space-x-8 space-y-1 md:space-y-0 text-center">
        <span class="font-semibold">You can contact me:</span>

        <a href="https://linkedin.com/in/oviedocamilo" class="flex items-center space-x-1 hover:text-primary dark:hover:text-primary-light transition-colors" target="_blank" title="LinkedIn">
          <LinkedInIcon class="h-5 w-5" />
          <span>in/oviedocamilo</span>
        </a>

        <a href="mailto:oviedocamilo94@gmail.com" class="flex items-center space-x-1 hover:text-primary dark:hover:text-primary-light transition-colors" target="_blank" title="Email">
          <MailIcon class="h-5 w-5" />
          <span>oviedocamilo94@gmail.com</span>
        </a>
      </div>
    </div>
  </div>

  <script src="/src/scripts/theme-check.js" defer is:inline></script>
</ErrorLayout>
