---
const personalImageAlt = "Camilo Oviedo";

import { Image } from "astro:assets";

import heroImage from "@/img/profile_image.webp";
import Badge from "@/components/common/Badge.astro";
import LinkedInIcon from "@/icons/social/LinkedIn.astro";
import MailIcon from "@/icons/common/Mail.astro";
import DownloadIcon from "@/icons/common/Download.astro";
import SocialStack from "@/components/common/SocialStack.astro";

const ResumePDF = import.meta.env.RESUME_PDF_URL;
---

<article class="flex flex-col items-center gap-8 md:flex-row mt-24">
  <Image
    src={heroImage}
    alt={personalImageAlt}
    class="rounded-full shadow-lg size-44"
  />

  <div class="flex flex-col items-center md:items-start">
    <h1
      class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white text-center md:text-left"
    >
      Hey, I'm Camilo Oviedo
    </h1>

    <p
      class="mt-6 text-xl text-pretty text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
    >
      <strong>Systems Engineer and Business Administrator </strong> with over 6 years
      of experience in software design, development, and project management. Proven
      expertise in system development and agile methodologies, particularly within
      banking and IT consulting sectors.
    </p>

    <nav class="flex flex-wrap gap-4 mt-8 items-center justify-center md:justify-start">
      <SocialStack href="mailto:oviedocamilo94@gmail.com">
        <MailIcon class="size-4" />
        Contact me
      </SocialStack>
      <SocialStack href={ResumePDF} download>
        <DownloadIcon class="size-4" />
        Download Resume
      </SocialStack>
      <SocialStack href="https://www.linkedin.com/in/oviedocamilo/">
        <LinkedInIcon class="size-4" />
        LinkedIn
      </SocialStack>
      <a
        href="https://www.linkedin.com/in/oviedocamilo/"
        target="_blank"
        rel="noopener"
        class="flex items-center transition md:justify-center md:hover:scale-105"
      >
        <Badge>Open to Work</Badge>
      </a>
    </nav>
  </div>
</article>
